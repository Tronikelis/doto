{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2020",
        "module": "CommonJS",
        "lib": ["es2017", "es7", "es6", "ESNext"],
        "outDir": "dist",
        "strict": true,
        "declaration": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@routes/*": ["./routes/*"],
            "@components": ["./components"],
            "@utils/*": ["./utils/*"],
            "@hooks/*": ["./hooks/*"],
            "@types": ["./types"],
            "@config": ["./config"],
            "@mongo": ["./mongo"],
            "@redis": ["./redis"],
            "@jobs/*": ["./jobs/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
